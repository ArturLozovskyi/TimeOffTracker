@model TimeOffTracker.Models.ManagerModels.ListRequestsModel
@{
    ViewBag.Title = "ManagerPanel";
}

@if (Model.Items.Count == 0)
{
    <span>No requests</span>
}
else
{
    <table class="table table-hover table-striped">
        <tbody>
            @foreach (var request in Model.Items)
            {
            <tr>
                <td>@request.FullNameEmployee</td>
                <td>@request.EmailEmployee</td>
                <td>@request.DateStart<br>@request.DateEnd</td>
                <td>@request.VacationType</td>
                <td>@request.Description</td>

                <td>
                    @foreach (var approver in request.Approvers)
                    {
                        @approver.Approver.FullName<br />
                    }
                </td>
                <td>
                    @foreach (var approver in request.Approvers)
                    {
                        @approver.Approver.Email<br />
                    }
                </td>
                <td>
                    @foreach (var approver in request.Approvers)
                    {
                        @approver.Priority<br />
                    }
                </td>
                <td>
                    @foreach (var approver in request.Approvers)
                    {
                        @approver.Status.Name @approver.Reason<br />
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
}