@model TimeOffTracker.Models.EditUserModel
@{
    ViewBag.Title = "ConfirmEditUser";
}

<h2>ConfirmEditUser</h2>
@using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Удалить запись? </h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldFullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.OldFullName, new { @value = @Model.OldFullName, @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.FullName, new { @value = @Model.OldFullName, @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OldEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.OldEmail, new { @value = @Model.OldEmail, @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Email, new { @value = @Model.OldEmail, @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OldRoles, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.OldRoles, new { @value = @Model.OldRoles, @readonly = "readonly", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AvailableRoles, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @foreach (var item in Model.AvailableRoles)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox"
                               name="SelectedRoles"
                               value="@item.Value" /> @item.Text
                        </label>
                    </div>
            }
        </div>
    </div>

    <input type="submit" class="btn btn-danger" value="Удалить запись" />

    @Html.ActionLink("Отмена", "AdminUsersPanel", null, new { @class = "btn btn-default" })
}
