@model TimeOffTracker.Models.ShowUsersInfo

@{
    ViewBag.Title = "ConfirmDeleteUser";
}

<h2>ConfirmDeleteUser</h2>

@using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Удалить запись? </h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.FullName, new { @value = @Model.FullName, @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Email, new { @value = @Model.Email, @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateCreate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.DateCreate, new { @value = @Model.DateCreate, @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AllRoles, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.AllRoles, new { @value = @Model.AllRoles, @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    @*@x => x.*@
    @*@Model.Id = Model.Id;*@
    @*<div class="form-group">
        <div class="col-md-offset-2 col-md-10">
        </div>
    </div>*@
    <input type="submit" class="btn btn-danger" value="Редактировать" />

    @Html.ActionLink("Отмена", "AdminUsersPanel", null, new { @class = "btn btn-default" })
}



