@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="VacationRequest" asp-action="VacationRequest">Request</a>
        </li>
        
        @if (User.IsInRole("Admin"))
         {
            <li>
                @Html.ActionLink("Админ панель", "AdminUsersPanel", "Admin", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </li>
         }

        @if (User.IsInRole("Manager"))
        {
            <li>
                @Html.ActionLink("Запросы на подтверждения", "ManagerPanel", 
                "Manager", routeValues:null, htmlAttributes: new { id = "loginLink" })
            </li>
        }

        <li>
            @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
